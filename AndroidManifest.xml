<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nookdevs.twook.activities" android:versionName="0.0.8" android:versionCode="8">
	<application android:label="@string/app_name" android:icon="@drawable/twook_button">
		<activity android:name=".PublicTimelineActivity"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>


		<activity android:name="SettingsActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="PersonalTimelineActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
		<activity android:name="TweetActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="RepliesTimelineActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
		<activity android:name="RetweetsTimelineActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
		<activity android:name="DirectMessagesTimelineActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
		<activity android:name="FollowersActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="FollowedActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="HomeTimelineActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="SearchActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>
		<activity android:name="FavoriteTimelineActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name"></activity>
		<activity android:name="UserSearchActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name"></activity>

		<service android:name="com.nookdevs.twook.services.PublicMessagesDownloaderService" />
		<service android:name="com.nookdevs.twook.services.RepliesDownloaderService" />
		<service android:name="com.nookdevs.twook.services.HomeTimelineDownloaderService" />
		<service android:name="com.nookdevs.twook.services.DirectMessagesDownloaderService" />
		<service android:name="com.nookdevs.twook.services.RetweetsDownloaderService" />
		<service
			android:name="com.nookdevs.twook.services.PersonalMessagesDownloaderService" />
		<service
			android:name="com.nookdevs.twook.services.FavoriteTimelineDownloaderService" />
		<service android:name="com.nookdevs.twook.services.FollowedDownloaderService" />
		<service android:name="com.nookdevs.twook.services.FollowersDownloaderService" />
		<service android:name="com.nookdevs.twook.services.UserSearchService" />


	</application>
	<uses-sdk android:minSdkVersion="3" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.CHANGE_PHONE_STATE" />
	<uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_PHONE_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

</manifest> 
